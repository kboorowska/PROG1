#include <stdio.h>

int main ()
{
char oddycha = 't';
  do {
      scanf ("%c", &oddycha);
	   printf ("RKO\n");
  } while (oddycha == 't');
// oddycha = getchar();
      char reakcja, oddychanie, AED;
      printf ("Czy reaguje\n");
      scanf ("%c", &reakcja);
      printf ("%c", reakcja);
      printf ("Czy oddycha\n");
      scanf ("%c", &oddychanie);
      if ((reakcja == 'n')&&(oddychanie == 'n'))
	{
	  printf ("Wykonuj RKO");
	}
      else if ((reakcja == 'n')&&(oddychanie == 't'))
	{
	  printf ("Pozycja bezpieczna");
	}
      else if ((reakcja == 't')&&(oddychanie == 't'))
	{
	  printf ("Pozycja bezpieczna");
	  printf ("Czy masz AED\n");
	  scanf ("%c", &AED);
	  printf ("%c", AED);
	  if ((AED == 'n')&&(oddychanie == 'n'))
	    printf ("Dalej wykonuj RKO\n");
	}
      return 0;
    }
